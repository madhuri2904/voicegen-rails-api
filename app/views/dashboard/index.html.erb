<div class="container">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="text-5xl md:text-7xl font-black mb-4" style="background: linear-gradient(135deg, #1e40af, #7c3aed); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
      üéôÔ∏è VoiceGen
    </h1>
    <p class="text-2xl text-gray-700 font-semibold">AI Text-to-Speech</p>
    <p class="text-lg text-gray-500 mt-2">(<%= VoiceGeneration.count %> voices generated)</p>
  </div>

  <!-- Model Errors Only -->
  <% if @voice_generation&.errors.any? %>
    <div class="message-error max-w-2xl mx-auto mb-8" style="background: linear-gradient(135deg, #f87171, #ef4444); color: white; padding: 1.5rem 2rem; border-radius: 20px; box-shadow: 0 15px 35px rgba(248, 113, 113, 0.4);">
      <h3 class="text-2xl font-bold mb-3 flex items-center">
        <span style="margin-right: 0.75rem;">‚ö†Ô∏è</span> 
        Please fix these errors:
      </h3>
      <ul class="list-disc ml-8 space-y-2">
        <% @voice_generation.errors.full_messages.each do |msg| %>
          <li class="text-lg"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Form -->
  <div class="glass-card max-w-3xl mx-auto">
    <%= form_with model: @voice_generation || VoiceGeneration.new,
                  url: voice_generations_path,
                  local: true,
                  html: { class: "space-y-6" },
                  id: "voice-form" do |f| %>
      
      <div>
        <label class="block text-xl font-bold text-gray-800 mb-3">üí≠ Enter your text</label>
        <%= f.label :text, class: "sr-only" %>
        <%= f.text_area :text,
                        placeholder: "Type or paste any text here to generate realistic AI voice...",
                        rows: 6,
                        class: "form-textarea" %>
        
        <% if @voice_generation&.errors[:text]&.any? %>
          <div style="margin-top: 0.5rem; padding: 0.75rem; background: linear-gradient(135deg, #fee2e2, #fecaca); border-radius: 12px; border-left: 4px solid #ef4444;">
            <span style="color: #dc2626; font-weight: 600;">‚ö†Ô∏è <%= @voice_generation.errors[:text].first %></span>
          </div>
        <% end %>
      </div>

      <%= f.hidden_field :voice_id, value: "CwhRBWXzGAHq8TQ4Fs17" %>

      <%= f.submit "üéôÔ∏è Generate Voice Audio", class: "btn-generate" %>
    <% end %>
  </div>

  <div class="text-center mt-12">
    <%= link_to "üìú View History (#{VoiceGeneration.count})", history_path, 
        class: "btn-history inline-block px-8 py-4 text-xl",
        style: "background: linear-gradient(135deg, #6b7280, #4b5563); color: white; padding: 1rem 2rem; border-radius: 16px; font-weight: 600; text-decoration: none; box-shadow: 0 10px 25px rgba(107, 114, 128, 0.3); display: inline-block;" %>
  </div>
</div>
